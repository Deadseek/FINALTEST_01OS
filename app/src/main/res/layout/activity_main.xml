<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="START!"
            android:layout_width="205dp"
            android:layout_height="86dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="90dp" android:textSize="36sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="405dp" android:onClick="newintent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="148dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/menu1"
            android:id="@+id/imageView2" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>